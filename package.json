{
  "name": "mes-configuration-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "A suite of Lambda functions for retriving configuration for mes",
  "homepage": "https://github.com/dvsa/mes-configuration-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-configuration-service.git"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan",
    "start": "npm run compile && sls offline start",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test",
    "test:integration": "npm run compile && jasmine build/spec/configuration-service.spec.js"
  },
  "dependencies": {
    "@dvsa/mes-microservice-common": "0.8.1",
    "aws-sdk": "^2.1012.0",
    "compare-versions": "^3.6.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@dvsa/mes-config-schema": "^1.2.1",
    "@types/aws-lambda": "^8.10.84",
    "@types/jasmine": "^3.10.0",
    "@types/node": "^14.17.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "aws-lambda-test-utils": "^1.3.0",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^1.3.1",
    "jasmine": "^3.10.0",
    "jasmine-spec-reporter": "^7.0.0",
    "json-schema-to-typescript": "^6.1.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "serverless": "^3.21.0",
    "serverless-dotenv-plugin": "^3.10.0",
    "serverless-offline": "^9.0.0",
    "serverless-webpack": "^5.6.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.6",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typemoq": "^2.1.0",
    "typescript": "^4.4.4",
    "webpack": "^5.59.0",
    "webpack-cli": "^4.9.1",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run security-scan && npm run lint && npm test"
    }
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-configuration-service/issues"
  }
}
