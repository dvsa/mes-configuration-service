{
  "name": "mes-configuration-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "A suite of Lambda functions for retrieving configuration for mes",
  "homepage": "https://github.com/dvsa/mes-configuration-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-configuration-service.git"
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-configuration-service/issues"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "start": "npm run compile && sls offline start",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test",
    "test:integration": "npm run compile && jasmine build/spec/configuration-service.spec.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.332.0",
    "@aws-sdk/lib-dynamodb": "^3.332.0",
    "@dvsa/mes-microservice-common": "0.8.3",
    "compare-versions": "^5.0.3",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@dvsa/mes-config-schema": "1.4.0",
    "@types/aws-lambda": "^8.10.115",
    "@types/jasmine": "^4.3.1",
    "@types/node": "^18.11.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "aws-lambda-test-utils": "^1.3.0",
    "eslint": "^8.40.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jasmine": "^5.0.0",
    "jasmine-spec-reporter": "^7.0.0",
    "lint-staged": "^13.2.2",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.0",
    "serverless": "^3.30.1",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^12.0.4",
    "serverless-webpack": "^5.11.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^5.0.4",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "npm run lint:fix"
    ]
  }
}
